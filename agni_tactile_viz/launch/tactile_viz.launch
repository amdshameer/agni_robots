<launch>

  <!-- select the robots -->
  <arg name="RH" default="1"/>
  <arg name="LH" default="0"/>
  <arg name="USE_PREFIX" default="1"/>
  <group if="$(arg RH)">
    <group if="$(arg LH)">
          <group if="$(arg USE_PREFIX)">
            <node pkg="tf" type="static_transform_publisher" name="baselinkrh" args="-0.2 0 0 0 0 0 /base /rh/rh_forearm 100"/>
            <node pkg="tf" type="static_transform_publisher" name="baselinklh" args="0.2 0 0 0 0 0 /base /lh/lh_forearm 100"/>
          </group> 
          <group unless="$(arg USE_PREFIX)">  
            <node pkg="tf" type="static_transform_publisher" name="baselinkrh" args="-0.2 0 0 0 0 0 /base /rh/forearm 100"/>
            <node pkg="tf" type="static_transform_publisher" name="baselinklh" args="0.2 0 0 0 0 0 /base /lh/forearm 100"/>
          </group>
        <!-- BOTH hands -->
        <include file="$(find agni_tactile_viz)/launch/single_hand_tactile_viz.launch" >
          <arg name="namespace" value="lh"/>
          <arg name="use_prefix" value="$(arg USE_PREFIX)"/>
        </include>
        <include file="$(find agni_tactile_viz)/launch/single_hand_tactile_viz.launch" >
          <arg name="namespace" value="rh"/>
          <arg name="use_prefix" value="$(arg USE_PREFIX)"/>
        </include>
    </group>  
    <group unless="$(arg LH)">
        <!-- RIGHT hand only -->
        <include file="$(find agni_tactile_viz)/launch/single_hand_tactile_viz.launch" >
          <arg name="namespace" value="rh"/>
          <arg name="use_prefix" value="$(arg USE_PREFIX)"/>
        </include>
    </group>  
  </group>  
  <group unless="$(arg RH)">
      <!-- LEFT hand only -->
        <include file="$(find agni_tactile_viz)/launch/single_hand_tactile_viz.launch" >
          <arg name="namespace" value="lh"/>
          <arg name="use_prefix" value="$(arg USE_PREFIX)"/>
        </include>
  </group>    
</launch>
