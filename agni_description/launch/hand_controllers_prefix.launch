    <node name="spawn_gazebo_hand_controllers"
	  pkg="controller_manager" type="spawner" respawn="false" output="screen"
	  args="--shutdown-timeout=1.0 sh_$(arg namespace)_mfj0_mixed_position_velocity_controller sh_$(arg namespace)_mfj3_mixed_position_velocity_controller sh_$(arg namespace)_mfj4_mixed_position_velocity_controller" />
  </group>
  <group unless="$(optenv ONE_FINGER 0)">
