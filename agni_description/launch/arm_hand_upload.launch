<launch>
	<!-- load description of arm+hand into robot_description -->
	<arg name="side" default="right"/>
  <arg name="arm_type" default="kuka"/>
	<arg name="hand_model" default="motor"/>
  <arg name="sim" default="1"/>
  <arg name="tactile" default=""/>
  <!-- load robot_description -->
  <param name="robot_description" command="$(find xacro)/xacro.py '$(find agni_description)/robots/arms_hands.urdf.xacro' 
          ARM:=$(arg arm_type) SIM:=$(arg sim) TACTILE:=$(arg tactile) HANDMODEL:=$(arg hand_model) SIDE:=$(arg side)" />
  
</launch>
 
