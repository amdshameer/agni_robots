<launch>
	<!-- load description of arm+hand into robot_description -->
	<arg name="namespace" default="right"/>
  <arg name="arm_type" default="kuka"/>
	<arg name="use_prefix" default="0"/>
  <!-- load robot_description -->
  <param if="$(arg use_prefix)" name="robot_description" command="$(find xacro)/xacro.py '$(find agni_description)/robots/$(arg namespace)_$(arg arm_type)_shadow_prefix_gazebo.urdf.xacro'" />
  <param unless="$(arg use_prefix)" name="robot_description" command="$(find xacro)/xacro.py '$(find agni_description)/robots/$(arg namespace)_$(arg arm_type)_shadow_gazebo.urdf.xacro'" />
</launch>
