<launch>
  <arg name="namespace" default="right"/>
  <arg name="use_prefix" default="0"/>
  <arg name="arm_type" default="kuka"/>
  <arg name="init_args" default=""/>

  <!-- load robot_description -->

        <include file="$(find agni_description)/launch/$(arg arm_type)_shadow_upload.launch" >
                 <arg name="namespace" value="$(arg namespace)"/>
                 <arg name="use_prefix" value="$(arg use_prefix)"/>
        </include>
 
        <param name="tf_prefix" value="$(arg namespace)"/>
        <include file="$(find agni_description)/launch/gazebo_robot_spawner.launch" >
                <!--  the pose is defined in the urdf relative to world already frame -->
                <arg name="init_args" value="$(arg init_args)" />
                <arg name="robot_name" value="$(arg namespace)_$(arg arm_type)_shadow" />
        </include>
        
        <node pkg="robot_state_publisher" type="robot_state_publisher"
                                name="robot_state_publisher_full_pos">
                <param name="publish_frequency" type="double" value="10.0" />
                
        </node>
  
</launch>
