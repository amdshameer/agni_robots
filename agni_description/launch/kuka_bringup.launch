<launch>
	<arg name="namespace" default="ra"/>
  <arg name="sim" default="true"/>
  <!-- Currently no difference between simulated and real kuka -->
  
  <!-- only load parameters here -->
  <rosparam command="load" file="$(find agni_description)/kuka/$(arg namespace)_controllers.yaml" />
    
  <node pkg="rosservice" type="rosservice" name="kuka_bringup" args="call --wait /rtt_environment/Deployer/run_lua_script $(find agni_description)/kuka/$(arg namespace)_deploy_component.lua"/>   
    
</launch>
