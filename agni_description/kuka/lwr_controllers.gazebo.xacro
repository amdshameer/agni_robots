<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- namespace must be set up according to launch file namespace -->
  <!-- port is the port number for the FRI UDP connection (be aware that port+1 is also used) -->
  <macro name="left_lwr_arm_gazebo_controller" params="namespace port">
		<gazebo> 
			<plugin name="left_lwr_arm_controller" filename="liblwr_controller.so">
				<alwaysOn>true</alwaysOn>
				<robotPrefix>left</robotPrefix>
				<robotNamespace>${namespace}</robotNamespace>
				<remotePort>${port}</remotePort>
				<baseLink>left_arm_base_link</baseLink>
				<toolLink>left_arm_hand_mount</toolLink>
				<left_arm_0_joint>0.0</left_arm_0_joint>
				<left_arm_1_joint>0</left_arm_1_joint>
				<left_arm_2_joint>0.0</left_arm_2_joint>
				<left_arm_3_joint>0</left_arm_3_joint>
				<left_arm_4_joint>0</left_arm_4_joint>
				<left_arm_5_joint>0</left_arm_5_joint>
				<left_arm_6_joint>0</left_arm_6_joint>
			</plugin>
		</gazebo>  
	</macro>
	
	<!-- namespace must be set up according to launch file namespace -->
  <!-- port is the port number for the FRI UDP connection (be aware that port+1 is also used) -->
  <macro name="right_lwr_arm_gazebo_controller" params="namespace port">
		<gazebo> 
			<plugin name="right_lwr_arm_controller" filename="liblwr_controller.so">
				<alwaysOn>true</alwaysOn>
				<robotPrefix>right</robotPrefix>
				<robotNamespace>${namespace}</robotNamespace>
				<remotePort>${port}</remotePort>
				<baseLink>right_arm_base_link</baseLink>
				<toolLink>right_arm_hand_mount</toolLink>
				<right_arm_0_joint>0.0</right_arm_0_joint>
				<right_arm_1_joint>0</right_arm_1_joint>
				<right_arm_2_joint>0.0</right_arm_2_joint>
				<right_arm_3_joint>0</right_arm_3_joint>
				<right_arm_4_joint>0</right_arm_4_joint>
				<right_arm_5_joint>0</right_arm_5_joint>
				<right_arm_6_joint>0</right_arm_6_joint>
			</plugin>
		</gazebo>  
	</macro>
	
</robot>
