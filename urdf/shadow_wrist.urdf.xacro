<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:macro name="shadow_wrist">
    <link name="${name}hand_wrist" >
      <inertial>
		  <origin xyz="0 0.0 0.0" rpy="0 0 0" />
		  <mass value="0.1" />
		  <inertia  ixx="0.120" ixy="0.0"  ixz="0.0"  iyy="0.148"  iyz="0.0" izz="0.0438" />
      </inertial>

      <visual>
		  <origin xyz="0 0 0" rpy="0 0 0" />
		  <geometry name="${name}hand_wrist_visual">
			 <mesh filename="package://sr_description/hand/model/${mesh}" scale="0.001 0.001 0.001" />
		  </geometry>
		  <material name="LightGrey" />
      </visual>

      <collision>
		  <origin xyz="0 0 0" rpy="0 0 0" />
		  <geometry name="${name}hand_wrist_collision_geom">
			 <box size="0.02 0.02 0.02" />
		  </geometry>
      </collision>
    </link>

    <gazebo reference="${name}hand_wrist">
      <material>PR2/Grey2</material>
      <selfCollide>false</selfCollide>
    </gazebo>

    <joint name="${name}hand_WRJ2" type="revolute">
      <parent link="${name}hand_forearm"/>
      <child link="wrist"/>
      <!--<origin xyz="0 -0.010 0.213" rpy="0 0 0" />-->
      <insert_block name="origin" />
      <axis xyz="0 1 0" />
      <limit lower="-0.52359877559829882" upper="0.17453292519943295" effort="5" velocity="1.0"/>
      <dynamics damping="100.5"/>
    </joint>

	 <transmission type="sr_mechanism_model/SimpleTransmission" name="wrist_transmission">
      <actuator name="${name}hand_WRJ2" />
      <joint name="${name}hand_WRJ2" />
      <mechanicalReduction>1</mechanicalReduction>
      <motorTorqueConstant>1</motorTorqueConstant>
      <pulsesPerRevolution>90000</pulsesPerRevolution>
    </transmission>

  </xacro:macro>

</robot>
